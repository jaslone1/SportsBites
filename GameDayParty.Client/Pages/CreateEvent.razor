@page "/create-event"
@using GameDayParty.Shared
@inject HttpClient Http
@inject NavigationManager Navigation

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">Host a New Party</h2>
        </div>
        <div class="card-body">
            <EditForm Model="newEvent" OnValidSubmit="HandleSubmit">
                <div class="mb-3">
                    <label class="form-label">Event Name</label>
                    <input class="form-control" @bind="newEvent.EventName" placeholder="e.g., Super Bowl LIX" required />
                </div>
                <div class="mb-3">
                    <label class="form-label">Host Name</label>
                    <input class="form-control" @bind="newEvent.HostName" placeholder="Your Name" required />
                </div>
                <div class="mb-3">
                    <label class="form-label">Game Details</label>
                    <textarea class="form-control" @bind="newEvent.GameDetails" placeholder="Who is playing? Where is it?"></textarea>
                </div>
                <div class="mb-3">
                    <label class="form-label">Date</label>
                    <input type="date" class="form-control" @bind="newEvent.EventDate" />
                </div>
                
                <div class="d-flex justify-content-between">
                    <button type="button" class="btn btn-secondary" @onclick='() => Navigation.NavigateTo("/")'>Cancel</button>
                    <button type="submit" class="btn btn-success">Create Party!</button>
                </div>
            </EditForm>
        </div>
    </div>
</div>

@code {
    private EventDto newEvent = new EventDto { EventDate = DateTime.Today };

    private async Task HandleSubmit()
    {
        var response = await Http.PostAsJsonAsync("api/events", newEvent);
        if (response.IsSuccessStatusCode)
        {
            Navigation.NavigateTo("/"); // Go back to home to see the new card
        }
    }
}