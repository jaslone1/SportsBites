@page "/event/{Id:int}"
@using GameDayParty.Shared
@inject HttpClient Http

<PageTitle>Party Details</PageTitle>

@if (partyEvent == null)
{
    <div class="spinner-border text-primary" role="status">
        <span class="visually-hidden">Loading...</span>
    </div>
}
else
{
    <div class="container mt-4">
        <h1 class="display-4">@partyEvent.EventName</h1>
        <p class="lead">@partyEvent.GameDetails</p>
        <div class="badge bg-primary fs-6 mb-4">Host: @partyEvent.HostName</div>

        <hr />
        <div class="alert alert-secondary mb-4">
            <label>Voting as:</label>
            <input @bind="voterName" class="form-control d-inline-block w-auto ms-2" placeholder="Enter your name to vote" />
        </div>

        <h3>Food Suggestions</h3>
        <ul class="list-group mb-4">
            @foreach (var food in partyEvent.FoodSuggestions)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <div>
                        <strong>@food.FoodName</strong> 
                        <span class="text-muted ms-2">suggested by @food.SuggestedByName</span>
                    </div>
                    <div class="d-flex align-items-center">
                        <span class="badge bg-warning text-dark me-2">@food.UpvoteCount</span>
                        <button class="btn @(GetButtonStyle(food)) btn-sm" 
                                disabled="@(string.IsNullOrEmpty(voterName))"
                                @onclick="() => HandleUpvote(food.FoodSuggestionId)">
                            @(string.IsNullOrEmpty(voterName) ? "Enter name to vote" : "I want this!")
                        </button>
                    </div>
                </li>
            }
        </ul>

        <div class="card p-3 shadow-sm">
            <h4>Add Your Favorite Game Day Bite</h4>
            <div class="row g-2">
                <div class="col">
                    <input type="text" class="form-control" placeholder="What are you bringing?" @bind="newFoodName" />
                </div>
                <div class="col">
                    <input type="text" class="form-control" placeholder="Your Name" @bind="userName" />
                </div>
                <div class="col-auto">
                    <button class="btn btn-success" @onclick="HandleAddFood">Submit</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public int Id { get; set; }
    private EventDto? partyEvent;
    private string newFoodName = "";
    private string userName = "";
    private string voterName = "";

    protected override async Task OnInitializedAsync()
    {
        await LoadEvent();
    }

    private async Task LoadEvent()
    {
        partyEvent = await Http.GetFromJsonAsync<EventDto>($"api/events/{Id}?voterName={voterName}");
    }

    private async Task HandleAddFood()
    {
        if (string.IsNullOrWhiteSpace(newFoodName)) return;

        var newSuggestion = new FoodSuggestionDto 
        { 
            FoodName = newFoodName, 
            SuggestedByName = userName 
        };

        var response = await Http.PostAsJsonAsync($"api/events/{Id}/food", newSuggestion);
        
        if (response.IsSuccessStatusCode)
        {
            newFoodName = ""; 
            await LoadEvent(); 
        }
    }

    private async Task HandleUpvote(int foodId)
    {
        var response = await Http.PostAsync($"api/events/food/{foodId}/upvote?voterName={voterName}", null);
        if (response.IsSuccessStatusCode)
        {
            await LoadEvent();
        }
    }
    private string GetButtonStyle(FoodSuggestionDto food)
    {
        // If the current user has voted for this, make it a solid blue button
        // Otherwise, make it a blue outline button
        return food.HasUserUpvoted ? "btn-primary" : "btn-outline-primary";
    }
}